@import url("http://fonts.googleapis.com/css?family=Noto+Sans")

html
  padding-bottom 12em

body
  font-family "Noto Sans" "Ubuntu" "Helvetica" sans-serif
  background-color rgb(0,30,75)
  color rgba(255, 255, 255, 0.8)
  margin 0px
  padding-top 5em
  padding-bottom 1em
  padding-left 3em
  padding-right 3em
  overflow-x hidden


a
  text-decoration none
  color inherit

h1
  color rgba(255, 255, 255, 1)
  font-size 2.2em
  margin 0em
  margin-bottom 2em

p
  margin-bottom 2em

.menu
  position fixed
  width 100%
  padding 0px
  padding-top 2em
  padding-bottom 2em
  margin 0px
  bottom 0px
  left 0px
  background-color rgba(85, 85, 85, 0.92)

  > li
    list-style none
    float right
    padding 0px
    margin-right 1em
    width 8em
    height 8em
    background-color rgba(255,255,255, 0.2)

    &:first-of-type
      margin-left 1em

    &.global
      float left

    > a
      display inline-block
      text-align center
      line-height 8em
      width 100%
      height 100%
      margin 0px
      padding 0px

.uris

  padding 0px
  margin 0px
  max-width 70em

  > li

    //float left
    display inline-block
    list-style none
    margin-bottom 2em
    margin-right 5em

    &:nth-of-type(3n+1)
      clear left

    > label
      cursor pointer
      font-size 85%
      display block

    > input
      outline none
      border none
      padding 0.5em
      width 17em